# ATLAS Environment Configuration Example
# Copy this file to .env and update with your values

# Database Configuration
DATABASE_URL=postgresql://atlas:atlas_password@localhost:5432/atlas_atc
POSTGRES_USER=atlas
POSTGRES_PASSWORD=atlas_password
POSTGRES_DB=atlas_atc

# Redis Configuration
REDIS_URL=redis://localhost:6379

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_URL=http://localhost:8000

# Frontend Configuration
STREAMLIT_PORT=8501

# ML Configuration
DEVICE=cpu  # or cuda if GPU available
MODEL_CHECKPOINT_DIR=./models/checkpoints
DATA_DIR=./data

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance
WORKERS=4
MAX_CONNECTIONS=100
POOL_SIZE=20